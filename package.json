{
  "name": "desafio-atm",
  "version": "1.0.0",
  "description": "Sistema completo de caixa eletr√¥nico (ATM) com frontend e backend",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd atm-backend && node server.js",
    "start:frontend": "cd atm-frontend && npx http-server -p 5500 -c-1",
    "install:all": "npm install && cd atm-backend && npm install && cd ../atm-frontend && npm install",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd atm-backend && npm test",
    "test:frontend": "cd atm-frontend && npm test",
    "build": "npm run build:frontend",
    "build:frontend": "cd atm-frontend && npm run build",
    "clean": "rm -rf atm-backend/data/sessions.json && rm -rf node_modules",
    "setup": "npm run install:all && npm run init:data",
    "init:data": "cd atm-backend && node scripts/initData.js",
    
    "docker:build": "docker-compose build",
    "docker:dev": "docker-compose up",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:test": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit",
    "docker:down": "docker-compose down",
    "docker:clean": "docker-compose down -v --rmi all",
    
    "k8s:dev": "kubectl apply -f k8s/dev/",
    "k8s:prod": "kubectl apply -f k8s/prod/",
    "k8s:delete": "kubectl delete -f k8s/",
    "k8s:status": "kubectl get all -l app=atm",
    "k8s:logs": "kubectl logs -l app=atm-backend -f",
    
    "deploy:local": "npm run docker:dev",
    "deploy:staging": "npm run docker:test",
    "deploy:production": "npm run k8s:prod"
  },
  "keywords": [
    "atm",
    "banking",
    "javascript",
    "nodejs",
    "frontend",
    "backend",
    "api",
    "rest",
    "docker",
    "kubernetes"
  ],
  "author": "Johnny Souto <johnny@exemplo.com>",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "http-server": "^14.1.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnnysoutodev/desafio-atm.git"
  },
  "bugs": {
    "url": "https://github.com/johnnysoutodev/desafio-atm/issues"
  },
  "homepage": "https://github.com/johnnysoutodev/desafio-atm#readme"
}